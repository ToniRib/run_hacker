<div class="container">
  <div class="row main-chart-area orange-border">
    <div class="col-sm-12">
      <div class="row text-center">
        <h2>Workout Listing</h2>
      </div>
      <div class="row table-section">
        <table class="table table-hover workouts-table" id="workouts-table">
          <thead>
            <tr>
              <th>Date <i class="fa fa-fw fa-sort" id="date-sort"></i></th>
              <th>Distance (mi) <i class="fa fa-fw fa-sort" id="distance-sort"></i></th>
              <th>Average Speed (mph) <i class="fa fa-fw fa-sort" id="speed-sort"></i></th>
              <th>Elapsed Time (min) <i class="fa fa-fw fa-sort" id="time-sort"></i></th>
              <th>Calories Burned (kcal) <i class="fa fa-fw fa-sort" id="calories-sort"></i></th>
              <th>Location <i class="fa fa-fw fa-sort" id="location-sort"></i></th>
              <th>Elevation (feet) <i class="fa fa-fw fa-sort" id="elevation-sort"></i></th>
            </tr>
          </thead>
          <tbody>
            <% cache("workout-listing-#{current_user.workouts.count}-#{current_user.workouts.maximum(:updated_at)}-#{current_user.id}") do %>
              <% @workouts.each do |workout| %>
                <%= render partial: "workout", locals: { workout: workout } %>
              <% end %>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $("table").on('click', 'tr[data-link]', function() {
      window.location = this.dataset.link;
    })
  })

</script>

<script type="text/javascript">
  $("[id$=-sort]").on('click', function() {
    var key = this.id;
    var tableContents = getTableContents();

    if (tableContents[tableContents.length - 1].distance < tableContents[0].distance) {
      tableContents.sort(propertyCompareDescending('distance'));
    } else {
      tableContents.sort(propertyCompareAscending('distance'));
    }

    $("#workouts-table tbody").empty();

    for (var i = 0; i < tableContents.length; i++) {
      $("#workouts-table").append("<tr class='clickable-row' id='" + tableContents[i].id + "' data-link='" + tableContents[i].dataLink + "'><td>" + tableContents[i].date + "</td><td>" + tableContents[i].distance + "</td><td>" + tableContents[i].speed + "</td><td>" + tableContents[i].time + "</td><td>" + tableContents[i].calories + "</td><td>" + tableContents[i].location + "</td><td>" + tableContents[i].elevation + "</td></tr>")
    }
  })

  function propertyCompareAscending(key) {
    return function(a, b) {
      if (a[key] > b[key]) {
        return -1;
      } else if (a[key] < b[key]) {
        return 1;
      } else {
        return 0;
      }
    }
  }

  function propertyCompareDescending(key) {
    return function(a, b) {
      if (a[key] < b[key]) {
        return -1;
      } else if (a[key] > b[key]) {
        return 1;
      } else {
        return 0;
      }
    }
  }

  function getTableContents() {
    var tableContents = $('#workouts-table tr:has(td)').map(function(index, value) {
      var $td =  $('td', this);
        return {
                 date: $td.eq(0).text(),
                 distance: parseFloat($td.eq(1).text()),
                 speed: parseFloat($td.eq(2).text()),
                 time: parseFloat($td.eq(3).text()),
                 calories: parseFloat($td.eq(4).text()),
                 location: $td.eq(5).text(),
                 elevation: parseFloat($td.eq(6).text()),
                 dataLink: this.dataset.link,
                 id: this.id
               }
    });
    return tableContents;
  }
</script>
