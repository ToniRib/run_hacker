<!DOCTYPE html>
<html>
  <head>
    <title>runHacker</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="navbar-header">
        <%= link_to "runHacker", root_path, class: "navbar-brand" %>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li><%= link_to "My Dashboard", dashboard_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Analytics<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Workout Listing", workouts_path %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to "Elevation", elevation_path %></li>
              <li><%= link_to "Location", location_path %></li>
              <li><%= link_to "Season", season_path %></li>
              <li><%= link_to "Time of Day", time_of_day_path %></li>
              <li><%= link_to "Temperature", temperature_path %></li>
            </ul>
          </li>
          <li><%= link_to "Log Out", logout_path %></li>
        <% else %>
          <li><%= link_to "Log In", "/auth/mapmyfitness" %></li>
        <% end %>
      </ul>
    </nav>

    <% flash.each do |type, msg| %>
      <div class="alert alert-<%= type %> text-center"><%= msg %></div>
    <% end %>

    <%= javascript_include_tag 'application' %>
    <%= yield %>
  </body>
</html>
