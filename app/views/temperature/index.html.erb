<div class="container">
  <div class="row main-chart-area orange-border">
    <div class="col-sm-12">
      <div class="row text-center">
        <h2>Temperature Analysis</h2>
      </div>
      <div class="row">
        <div class="filter">
          <div class="col-sm-5 offset-top">
            <label>Distance Range</label>
            <%= text_field :minimum, :distance %>
            <span>to</span>
            <%= text_field :maximum, :distance %>
            <span>miles</span>
          </div>
          <div class="col-sm-4 text-center offset-top">
            <label>Y-axis</label>
            <%= select_tag "y-axis", options_for_select(["Total Time", "Average Speed", "Time Spent Resting"], "Total Time") %>
          </div>
          <div class="col-sm-3">
            <button id="create-temperature-chart" class="btn btn-default pull-right create-graph">Create Graph</button>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <div class="chart" id="temperature-chart"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render partial: "temperature_chart" %>
