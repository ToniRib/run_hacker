<script type="text/javascript">
  $(function () {
    $('#temperature-chart').highcharts({
      chart: {
        type: 'scatter',
        zoomType: 'xy',
        height: 570,
        animation: true
      },
      xAxis: {
        title: {
          enabled: true,
          text: 'Temperature (°F)'
        },
        startOnTick: true,
        endOnTick: true,
        showLastLabel: true
      },
      title: { text: null },
      yAxis: {
        title: {
          text: null
        }
      },
      legend: {
        enabled: false
      },
      plotOptions: {
        scatter: {
          marker: {
            radius: 5,
            states: {
              hover: {
                enabled: true,
                lineColor: 'rgb(100,100,100)'
              }
            }
          },
          states: {
            hover: {
              marker: {
                enabled: false
              }
            }
          },
          tooltip: {
            headerFormat: '<b>{series.name}</b><br>',
            pointFormat: '{point.x}°F, {point.y}'
          }
        }
      },
      series: [{
        color: 'rgba(223, 83, 83, .5)',
        data: null,
        name: 'Workouts'
      }]
    });
  });

  <!-- DYNAMIC CHART -->
  $('#create-temperature-chart').on('click', function() {
    updateChart();
  })

  $('#y-axis').on('change', function() {
    updateChart();
  })

  function updateChart(){
    var $chart = $('#temperature-chart').highcharts()
    var minDistance = parseInt($('#minimum_distance').val());
    var maxDistance = parseInt($('#maximum_distance').val());

    var range = minDistance.toString() + ' - ' + maxDistance.toString() + ' mile ';
    var yAxisSelection = $('#y-axis').val();

    $chart.setTitle({ text: 'Temperature vs. ' + yAxisSelection + ' for ' + range + 'runs' });

    var yAxisUnits = {
      "Total Time": " (min)",
      "Average Speed": " (mph)",
      "Time Spent Resting": " (min)"
    };

    $chart.yAxis[0].setTitle({ text: yAxisSelection + yAxisUnits[yAxisSelection] });

    var data = {
      "Total Time": <%= @workouts.distance_temperature_and_total_time %>,
      "Average Speed": <%= @workouts.distance_temperature_and_average_speed %>,
      "Time Spent Resting": <%= @workouts.distance_temperature_and_time_spent_resting %>
    };

    var workouts = data[yAxisSelection];

    var filtered = [];
    var x, y;

    workouts.forEach(function(set){
      if (set[0] >= minDistance && set[0] <= maxDistance) {
        y = set[2];
        x = set[1];
        filtered.push([x, y]);
      }
    })

    $chart.series[0].setData(filtered);
    $chart.series[0].update({
      animation: {
        duration: 250
      }
    });
  }
</script>
